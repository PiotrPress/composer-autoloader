{
  "name": "piotrpress/composer-autoloader",
  "type": "composer-plugin",
  "license": "MIT",
  "description": "This composer command allows to generate simple autoloader file based on a classmap file.",
  "homepage": "https://PiotrPress",
  "authors": [
    {
      "name": "Piotr Niewiadomski",
      "homepage": "https://github.com/PiotrPress"
    }
  ],
  "keywords": [
    "autoloader", "autoload", "classmap", "class map", "composer", "composer script", "composer plugin", "composer command"
  ],
  "require": {
    "php": ">=7.4",
    "composer-plugin-api": "^2.0"
  },
  "extra": {
    "class": "PiotrPress\\Composer\\Autoloader\\Plugin"
  },
  "autoload": {
    "psr-4": {
      "PiotrPress\\Composer\\Autoloader\\": "src/"
    },
    "classmap": [
      "src"
    ]
  }
}